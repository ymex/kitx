<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99000000"

    android:gravity="right|center_vertical"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="8dp"
        android:src="@mipmap/ic_tool_url" />
    <EditText
        android:id="@+id/etUrl"
        android:layout_weight="1"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:background="@null"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="#ffffff"
        android:hint="链接"
        android:gravity="center_vertical"
        android:imeOptions="actionGo"
        android:imeActionLabel="跳转"
        android:layout_width="0dp"
        android:layout_height="36dp"/>

    <cn.ymex.kitx.widget.webview.proxy.AlphaImageView
        android:id="@+id/ivRefresh"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dip"
        android:padding="7dp"
        android:src="@mipmap/ic_tool_refresh" />

    <cn.ymex.kitx.widget.webview.proxy.AlphaImageView
        android:id="@+id/ivBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dip"
        android:padding="6dp"
        android:src="@mipmap/ic_tool_arrow_b" />

    <cn.ymex.kitx.widget.webview.proxy.AlphaImageView
        android:id="@+id/ivForward"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="6dp"
        android:layout_marginLeft="8dip"
        android:src="@mipmap/ic_tool_arrow_f" />


    <cn.ymex.kitx.widget.webview.proxy.AlphaImageView
        android:id="@+id/ivDebug"
        android:layout_width="36dp"
        android:layout_marginLeft="8dip"
        android:layout_height="36dp"
        android:padding="6dp"
        android:src="@mipmap/ic_tool_debug" />


</LinearLayout>
