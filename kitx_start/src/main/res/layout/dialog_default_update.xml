<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/dialog_border_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:paddingTop="12dip"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:paddingBottom="12dip"
        android:text="发现新版本"
        android:textColor="#000000"
        android:textSize="18sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#e6e6e6" />


    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dip"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:paddingBottom="16dip"
        android:gravity="start|top"
        android:lineSpacingExtra="4dp"
        android:text="1.客户端体验优化\n2.UI界面优化升级"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvErrorTip"
        android:visibility="gone"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:textSize="13sp"
        android:paddingTop="8dip"
        android:textColor="@android:color/holo_red_light"
        android:paddingBottom="8dip"
        android:layout_width="match_parent"
        android:text="下载出错："
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6" />
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dip">
        <LinearLayout
            android:id="@+id/vOptWrap"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#999999"
                android:textSize="16sp" />

            <View
                android:id="@+id/vLine"
                android:layout_width="0.5dp"
                android:layout_height="48dp"
                android:background="#e6e6e6" />

            <TextView
                android:id="@+id/btnOK"
                android:layout_width="0dp"
                android:layout_height="48dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="更新"
                android:textColor="@drawable/selector_button_text"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/vProgressWrap"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:layout_height="20dip">
            <ProgressBar
                android:id="@+id/progressDownload"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="4dp"
                android:max="100"
                android:progressDrawable="@drawable/progressbar" />
            <TextView
                android:id="@+id/tvProgressTip"
                android:layout_width="wrap_content"
                android:text="100%"
                android:textColor="#999999"
                android:gravity="right"
                android:width="36dip"
                android:textSize="11dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>